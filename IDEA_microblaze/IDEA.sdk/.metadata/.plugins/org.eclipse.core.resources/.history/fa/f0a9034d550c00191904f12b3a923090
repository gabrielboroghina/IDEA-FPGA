/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"

int n;
uint8_t msg[100], outMsg[100], key[16];
uint16_t K[52];

/** Returns the i-th bit from the initial 128-bit key */
uint16_t key_bit(int i) {
	i %= 128;
	return key[i / 8] & (1 << (i % 8));
}

void generate_keys() {
	int nr = -1;
	int start = 0;

	for (int i = 1; i <= 7; i++) {
		int nrSubkeys = i < 7 ? 8 : 6;

		for (int j = 0; j < nrSubkeys; j++) {
			for (int k = 0; k < 16; k++)
				K[++nr] |= key_bit(start + j * 16 + k) << k;
		}

		// shift the key
		start = (start + 25) % 128;
	}
}

void encrypt() {
	generate_keys();
}

void decrypt() {

}

int main()
{
    init_platform();

    // read input message from file
    FILE *msg_in = fopen("msg.in", "rb");
    fseek(msg_in, 0, SEEK_END);
    n = ftell(msg_in);
    rewind(msg_in);
    fread(msg, 1, n, msg_in);
    fclose(msg_in);

    FILE *key_in = fopen("key.in", "rb");
    fread(key, 1, 16, key_in);
    fclose(key_in);

    encrypt();

    cleanup_platform();
    return 0;
}
